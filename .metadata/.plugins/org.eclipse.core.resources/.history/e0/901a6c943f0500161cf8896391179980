package com.capgemini.java;

import java.util.HashMap;
import java.util.Map;

public class CardValidator {
	private static final int NUMBER_OF_SIGNS_IN_LINE = 20;
	private String lineOfCards = "";
	private Map<String,Integer> validCard = new HashMap<String,Integer>()
			{{
				put("AS",0); put("AD",0); put("AH",0); put("AC",0);
				put("KS",0); put("KD",0); put("KH",0); put("KC",0);
				put("QS",0); put("QD",0); put("QH",0); put("QC",0);
				put("JS",0); put("JD",0); put("JH",0); put("JC",0);
				put("TS",0); put("TD",0); put("TH",0); put("TC",0);
				put("9S",0); put("9D",0); put("9H",0); put("9C",0);
				put("8S",0); put("8D",0); put("8H",0); put("8C",0);
				put("7S",0); put("7D",0); put("7H",0); put("7C",0);
				put("6S",0); put("6D",0); put("6H",0); put("6C",0);
				put("5S",0); put("5D",0); put("5H",0); put("5C",0);
				put("4S",0); put("4D",0); put("4H",0); put("4C",0);
				put("3S",0); put("3D",0); put("3H",0); put("3C",0);
				put("2S",0); put("2D",0); put("2H",0); put("2C",0);
			}};
	
	
	private void clearLineFromWhiteSpaces(String line){
		this.lineOfCards = line.replaceAll("\\s+","");
	}
	
	private boolean isValidCard(String card){
		if(validCard.containsKey(card) && validCard.get(card)==0){
			validCard.put(card, 1);
			return true;
		}
		return false;
	}

	private boolean isCorrectNumberOfSignsInLine(){
		return lineOfCards.length() == NUMBER_OF_SIGNS_IN_LINE;
	}
	
	public String[][] getValidatedCards(String line) {
		// TODO Auto-generated method stub
		//i + 1 < line.length() && line.substring(i, i + 1).matches("[AKQJT98765432]")
		//&& line.substring(i + 1, i + 2).matches("[CSHD]")
		return null;
	}
}
