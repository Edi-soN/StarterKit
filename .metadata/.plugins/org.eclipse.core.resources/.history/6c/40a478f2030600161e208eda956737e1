package com.capgemini.java;

import java.util.ArrayList;
import java.util.LinkedList;
import java.util.List;

public class Round {
	private List<Roll> rolls = new ArrayList<>(2);
	private int score = 0;
	
	public int getScore(){
		int totalScore = 0;
		for(Roll singleRoll : rolls){
			totalScore += singleRoll.getScore() + bonus.getBonusPoints();
		}
		return score;
	}
}
