package com.capgemini.java;

public class Cell {
	private int positionX = 0;
	private int positionY = 0;
	private int numberOfAliveNeighbors = 0;
	private int life = 0;

	public Cell(int positionX, int positionY, int life) {
		this.positionX = positionX;
		this.positionY = positionY;
		this.life = life;
		this.numberOfAliveNeighbors = 0;
	}

	public int getPositionX(){
		return this.positionX;
	}
	
	public int getPositionY(){
		return this.positionY;
	}
	
	public void setNumberOfAliveNeighbors(int numberOfAliveNeighbors) {
		this.numberOfAliveNeighbors = numberOfAliveNeighbors;
	}

	public int getNumberOfAliveNeighbors() {
		return this.numberOfAliveNeighbors;
	}

	public void setLife(int life) {
		this.life = life;
	}

	public int getLife() {
		return this.life;
	}
}
